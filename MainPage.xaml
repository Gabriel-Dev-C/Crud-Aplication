<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicativoAcademico.MainPage">

    <ScrollView>
        
        <VerticalStackLayout
            Padding="30,0"
            Spacing="15">

            <Label
                x:Name="lblCodigo"
                Text="Código"/>

            <Entry
                x:Name="etrCodigo"
                Placeholder="Digite aqui o código"/>

            <Label
                x:Name="lblNome"
                Text="Nome"/>

            <Entry
                x:Name="etrNome"
                Text="Digite aqui seu nome."/>

            <Button
                x:Name="btnSubmit"
                Text="Cadastrar"
                Clicked="btnSubmit_Clicked"/>

        </VerticalStackLayout>
        
    </ScrollView>

</ContentPage>
